---
import { Image } from "astro:assets";
import type { TeamMember } from "../data/data.type";
interface Props {
  member: TeamMember;
  kind: "organizer" | "staff";
  index: number;
}

const { member, index, kind } = Astro.props;
---

<article
  class="w-full max-w-[300px] h-fit flex flex-col align-middle justify-center"
>
  <a
    aria-label={`Go to ${member.name}'s profile`}
    transition:name={`picture-${kind}-${member.name}`}
    href={`/${kind}/${index}#top`}
    data-umami-event="team_member_profile_click"
    class="w-[200px] h-[200px] block rounded-full shadow-md hover:shadow-lg transition-shadow duration-500 ease-in-out overflow-hidden mx-auto"
  >
    <Image
      class="object-cover select-none mx-auto aspect-square w-[200px] h-[200px] hover:scale-110 transition-transform duration-500 ease-in-out"
      src={member.picture}
      alt={`Picture of ${member.name}`}
      height={200}
      width={200}
    />
  </a>
  <h3
    transition:name={`name-${kind}-${member.name}`}
    class="w-full text-2xl font-semibold text-center text-dark-background dark:text-light-background p-2"
  >
    {member.name}
</h3>
</article>
