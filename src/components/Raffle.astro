---
import { Image } from "astro:assets";
import type { Raffle } from "../data/data.type";
import RichText from "./RichText.astro";
interface Props {
  raffle: Raffle;
  isEven: boolean;
}

const { raffle, isEven } = Astro.props;
---

<article
  class:list={{
    "bg-yellow-100 dark:bg-green-900 dark:bg-opacity-30 text-dark-background dark:text-white":
      isEven,
  }}
>
  <div
    class="wrapper flex-col flex gap-8 sm:gap-4 items-center"
    class:list={{
      "sm:flex-row": !isEven,
      "sm:flex-row-reverse": isEven,
    }}
  >
    <Image
      class="w-full aspect-square object-cover sm:w-1/2 bg-green-50 max-h-[500px]"
      src={raffle.picture}
      alt="Raffle image"
      height={500}
      width={500}
    />
    <div
      class="flex flex-col sm:justify-center sm:w-1/2 px-4 gap-4 [&>h1]:text-2xl [&>h1]:font-bold"
    >
      <RichText text={raffle.description} />
    </div>
  </div>
</article>
